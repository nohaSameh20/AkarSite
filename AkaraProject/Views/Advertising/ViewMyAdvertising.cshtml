@model IEnumerable<AkaraProject.ViewModels.AdevrtisingViewModel>
@using AkaraProject.CustomeAuthentication;
@{
    ViewBag.Title = "ViewMyAdvertising";
}

<div class="elements ptb-100 bg-1">
    <div class="container">
        <div class="row mb-100">
            <div class="col-12">
                <div class="row">
                    <div class="col-md-12">
                        <h5 class="mb-30"> @Model.Count() Adevrtising/s</h5>
                    </div>
                </div>
                <div class="row">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            if (Model.Count() > 0)
                            {
                                <div class="col-md-4 col-12">
                                    <div class="single_property mb-30">
                                        <div class="single_propert_img">
                                            <img src="data:image/png;base64,@item.Image" style="height: 300px;width: 349px;" alt="">
                                        </div>
                                        <div class="single_property-text">
                                            <div class="single_property_inner">
                                                <h4>@item.Location</h4>
                                                <p>@item.UnitType</p>
                                                <p>@item.AdvertisingStatuse</p>
                                                <br />
                                                <br />

                                                @Html.ActionLink("Details", "Details", "Home", new { id = item.Id }, new { @style = "color:white;text-decoration:none" })
                                                @Html.ActionLink("Delete", "Delete", "Advertising", new { id = item.Id }, new { @style = "color:white;text-decoration:none" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>
                @if (Model.Count() == 0)
                {
                <div class="col-12">
                    <div class="row">
                        <div class="col-md-12">
                            <p class="mb-30">You didn`t add any advertising until now...</p>
                        </div>
                    </div>
                </div>
                }
            </div>
            </div>
    </div>
</div>
